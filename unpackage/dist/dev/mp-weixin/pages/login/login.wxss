.box .tab_box {
  position: absolute;
  right: 5%;
  bottom: 20%;
}
.box .tab_box .tab_btn {
    font-size: 32rpx;
}
.box .com_input_box {
  height: 99rpx;
  background: whitesmoke;
  border-radius: 8rpx;
  margin-top: 100rpx;
}
.box .com_input_box .user_phone_box image {
    height: 40rpx;
    width: 40rpx;
}
.box .com_input_box .phone_box input {
    width: 74%;
    margin: 0 20rpx 0 20rpx;
}
.box .code_box {
  height: 99rpx;
  background: whitesmoke;
  border-radius: 8rpx;
  margin-top: 20rpx;
}
.box .code_box .user_phone_box {
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
        -ms-flex-pack: justify;
            justify-content: space-between;
}
.box .code_box .user_phone_box image {
      height: 40rpx;
      width: 40rpx;
}
.box .code_box .btnvalue {
    min-width: 170rpx;
}
.box .code_box button::after {
    border: none;
}
.box .code_box button {
    background: whitesmoke;
    padding: 0 0 0 20rpx;
    color: rgba(255, 102, 102, 0.5);
    font-size: 28rpx;
    margin: 0;
    border-left: 1rpx solid #E0E0E0;
    border-radius: 0;
    height: 48rpx;
    line-height: 48rpx;
}
.box button::after {
  border: none;
}
.box .login_btn {
  height: 88rpx;
  border-radius: 50rpx;
  color: #fff;
  line-height: 88rpx;
  text-align: center;
  margin-top: 40rpx;
}
.box button[disabled] {
  color: #fff !important;
  background: rgba(255, 102, 102, 0.5) !important;
}
.box .login_btn_y {
  background: #ff6666;
}
.box .login_btn_n {
  background: rgba(255, 102, 102, 0.5);
}
.box .xy_font {
  font-size: 22rpx;
  color: #999999;
  line-height: 32rpx;
  margin-top: 22rpx;
}

