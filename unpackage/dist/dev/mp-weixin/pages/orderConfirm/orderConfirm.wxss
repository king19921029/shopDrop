.box .com_order_title {
  padding: 26rpx 0;
}
.box .com_order_title > view {
    padding-right: 50rpx;
}
.box .com_order_title input {
    width: 77%;
}
.box .com_order_title image {
    width: 32rpx;
    height: 32rpx;
}
.box .number_box {
  margin: 5% 0 30rpx 10%;
  font-size: 72rpx;
  font-weight: bold;
}
.box .number_box .more_box {
    width: 70%;
    -webkit-flex-wrap: wrap;
        -ms-flex-wrap: wrap;
            flex-wrap: wrap;
}
.box .number_box .more_box view {
      width: 32%;
      padding: 28rpx 0;
      text-align: center;
}
.box .number_box .one_box {
    width: 10%;
    text-align: end;
    margin-left: 5%;
}
.box .textarea_box {
  padding: 20rpx 0;
}
.box .textarea_box view {
    text-align: end;
}
.box .textarea_box textarea {
    height: 200rpx;
}
.box .footer {
  margin-top: 50rpx;
}
.box .footer view {
    border-radius: 8rpx;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
}
.box .footer .footer_right {
    background: rgba(30, 161, 20, 0.8);
    width: 64%;
    height: 80rpx;
}
.box .footer .footer_left {
    background: #b7b7b7;
    width: 32%;
    height: 80rpx;
}

